# Environment
NODE_ENV=development

# Database
DATABASE_URL=

# Database Connection Pool Configuration
DB_MAX_OPEN_CONN=10          # Maximum number of connections in pool
DB_MIN_IDLE_CONN=2           # Minimum number of idle connections
DB_IDLE_TIMEOUT_MS=30000     # Max time (ms) a connection can remain idle
DB_CONNECTION_TIMEOUT_MS=5000 # Max time (ms) to wait for connection
DB_MAX_LIFE_CONN=0           # Max lifetime of connection in seconds (0 = no limit)
DB_SSLMODE=disable           # SSL mode: disable, require, verify-ca, verify-full
DB_SSL_REJECT_UNAUTHORIZED=true # Reject unauthorized SSL certificates

# JWT
JWT_SECRET=
JWT_EXPIRES_IN="24h"

# Server
PORT=8080

# Logging
LOG_LEVEL="info"
